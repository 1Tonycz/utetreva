{var $css = "gallery"}

{block content}
    <div class="gallery-container full-width">

        <div class="gallery-head">
            <h1>üì∏ Galerie</h1>
            <a n:href="create" class="btn-add">‚ûï Nov√° fotografie</a>
        </div>

        <section class="gallery-section">
            <h2 class="section-title">Restaurace</h2>
            <div class="gallery-grid">
                {foreach $restaurace as $r}
                    <article class="gallery-card">
                        <a
                                class="btn-delete"
                                n:href="delete! id => $r['id']"
                                data-confirm="Opravdu odstranit ‚Äû{$r['title']}‚Äú?"
                                title="Odstranit">
                            üóëÔ∏è
                        </a>

                        <div class="thumbs">
                            <img src="{$basePath}/gallery/{$r['images']}" alt="{$r['title']}" loading="lazy">
                        </div>

                        <header class="gallery-header">
                            <h3>{$r['title']}</h3>
                            <span class="gallery-category">{$r['category']|capitalize}</span>
                        </header>
                    </article>
                {/foreach}
            </div>
        </section>

        <section class="gallery-section">
            <h2 class="section-title">Pension</h2>
            <div class="gallery-grid">
                {foreach $pension as $p}
                    <article class="gallery-card">
                        <a
                                class="btn-delete"
                                n:href="delete! id => $p['id']"
                                data-confirm="Opravdu odstranit ‚Äû{$p['title']}‚Äú?"
                                title="Odstranit">
                            üóëÔ∏è
                        </a>

                        <div class="thumbs">
                            <img src="{$basePath}/gallery/{$p['images']}" alt="{$p['title']}" loading="lazy">
                        </div>

                        <header class="gallery-header">
                            <h3>{$p['title']}</h3>
                        </header>
                    </article>
                {/foreach}
            </div>
        </section>

        <section class="gallery-section">
            <h2 class="section-title">Kladsk√°</h2>
            <div class="gallery-grid">
                {foreach $kladska as $k}
                    <article class="gallery-card">
                        <a
                                class="btn-delete"
                                n:href="delete! id => $k['id']"
                                data-confirm="Opravdu odstranit ‚Äû{$k['title']}‚Äú?"
                                title="Odstranit">
                            üóëÔ∏è
                        </a>

                        <div class="thumbs">
                            <img src="{$basePath}/gallery/{$k['images']}" alt="{$k['title']}" loading="lazy">
                        </div>

